{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(npx expo start:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(npm run start:*)",
      "Bash(rm:*)",
